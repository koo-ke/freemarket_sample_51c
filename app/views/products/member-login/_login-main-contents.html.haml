.wrapper
  .login-main
    .main-content
      .main-content__head
        %p アカウントをお持ちでない方はこちら
        = link_to "#" do 
          新規会員登録
      .inner-content
        %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
          = fa_icon "facebook-square", class: "icon-sns"
          Facebookでログイン
        %button#google-login.btn-default.btn-sns.btn-sns-google
          = image_tag "google.png" ,  height:25 , class: "icon-sns"
          Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.inner-content
          .field-label.form-group
            .field-input
              = f.email_field :email , placeholder: "メールアドレス", type: "email", class: "login-input-text"
          .form-group
            .field-input
              = f.password_field :password, autocomplete: "off", placeholder: "パスワード", type: "password", class: "login-input-text"
          .form-group
            .g-recaptcha.login-captcha{"data-sitekey": "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
              %div{style: "width: 304px; height: 78px;"}
                %div
                  %iframe{frameborder: "0", height: "78", name: "a-f5zc3shlqfhi", role: "presentation", sandbox: "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", scrolling: "no", src: "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1558333958099&size=normal&cb=nfx3fm1lfyf6", width: "304"}
                %textarea#g-recaptcha-response.g-recaptcha-response{name: "g-recaptcha-response", style: "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
          .actions
            = f.submit "ログイン", class: "btn-red"

          = link_to "#" do
            パスワードをお忘れの方
