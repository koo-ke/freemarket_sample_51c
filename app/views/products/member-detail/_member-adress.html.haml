.wrapper-member-info
  .personal-entry
    .signup-page-header
      %header.personal-entry__header
        = link_to 'https://www.mercari.com/jp' do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2399382397"
      %nav.progress-bar
        %ol.clearfix
          %li.through
            会員情報
            .progress-status
          %li.through
            電話番号認証 
            .progress-status
          %li.active
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
  .info-main
    .info-content
      %h2.info-content__head 住所入力
      %form.info-inner.registration-form{action: "https://www.mercari.com/jp/signup/sms_confirmation/?after_save_callbacttps://www.mercari.com/jp/", method: "POST", novalidate: "novalidate"}
        %input{name: "__csrf_value", type: "hidden",value: ""}/
        .main-content
          .form-group
            %label{for: "postal_code"} 郵便番号
            %span.form-require 必須
            %input.input-default{name: "postal_code", placeholder: "例) 123-4567", type: "integer",value: ""}/
