.payment_content
  .content
    .content__title 支払い方法
    .form_content
      %form.content__form{method: "POST"}
        %input{type: "hidden"}/
        .form-group
          %label.form_content__title カード番号
          %span.form_content__require 必須
          %input.form_content__card_number{placeholder: "半角数字のみ"}/
          %ul.content__card-list
            %li.content__card-list--image1
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2399382397", height: "20", :width => "49"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2399382397", height: "20", width: "34"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2399382397", height: "20", width: "30"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2399382397", height: "20", width: "32"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2399382397", height: "20", width: "21"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2399382397", height: "20", width: "32"
            %li.content__card-list--image
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2399382397", height: "20", width: "32"

        .form-group
          %label.form_content__title 有効期限
          %span.form_content__require 必須
